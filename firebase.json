{
  "hosting": [
    {
      "target": "docs-dev",
      "public": "build",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "redirects": [
        {
          "source": "/hardware/esp32/quickstart{,/**}",
          "destination": "/hardware/esp32/zephyr-quickstart",
          "type": 301
        }
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "docs-prod",
      "public": "build",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "redirects": [
        {
          "source": "/hardware/esp32/quickstart{,/**}",
          "destination": "/hardware/esp32/zephyr-quickstart",
          "type": 301
        }
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
